body
  background aliceblue
  width 100%
  font-family 'Roboto'
  text-align center

a
  text-decoration none
  color skyblue
  font-size 12px

p
  color cornflowerblue
input[type="text"]
  font-size 18px
  border 3px solid aliceblue
  padding 10px
  border-radius 5px
  color #555555
  margin-top 50px
  width 400px

input[type="checkbox"]
  margin-right 20px

span
  font-size 16px
  color gray
.contenedor
  max-width 500px
  margin-right auto
  margin-left auto

.list
  margin-right auto
  margin-left auto
  padding-left 0
  text-align left

.task-item
  list-style none
  display flex
  justify-content space-between

.name-task
  flex-grow 1

.complete
  background lightskyblue

.linkremove
  margin 0 0 0 53px
  color darkred

.dnone
  display none

.taskcomplete
  display none